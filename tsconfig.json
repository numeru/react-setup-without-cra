{
  "compilerOptions": {
    "outDir": "./dist/",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "esnext",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@apis/*": ["src/apis/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@stores/*": ["src/stores/*"],
      "@assets/*": ["src/assets/*"]
    }
  }
}
