{
  "compilerOptions": {
    "outDir": "./dist/",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "esnext",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "@apis/*": ["apis/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@stores/*": ["stores/*"],
      "@assets/*": ["assets/*"]
    }
  }
}
